#:kivy 1.11.1


<PongBall>:
	size: 50, 50
	canvas:
		Ellipse:
			pos: self.pos
			size: slef.size




<PongGame>:
	 canvas:
	 	Rectangle:
	 		## Бордер посередине
	 		pos: self.center_x - 5, 0
	 		size: 10, self.height

	  Label:
	  	  ## Очки игрока слева
	  	  font_size: 70
	  	  center_x: root.width / 4
	  	  top: root.top - 50
	  	  text: "0"

	  Label:
	  	  ## Очки игрока справа
	  	  font_size: 70
	  	  center_x: root.width * 3 / 4
	  	  top: root.top - 50
	  	  text: "0"